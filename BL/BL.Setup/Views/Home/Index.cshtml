@using BL.Setup.Infrastructure;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Setup</h1>
    
    <div class="card-body">

        @if (TempData[TempDataKeys.OneClickMsg] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData[TempDataKeys.OneClickMsg].ToString()
            </div>
        }
        else if (TempData[TempDataKeys.OneClickError] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData[TempDataKeys.OneClickError].ToString()
            </div>
        }
        else
        {
            using (Html.BeginForm("OneClickSetup", "Home"))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="One Click Setup" class="btn btn-success" />
            }
        }

    </div>

</div>
